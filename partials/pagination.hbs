{{#is "tag"}}

    <div class="post-feed">
        {{#foreach posts}}
            {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            {{> "post-card"}}
        {{/foreach}}
    </div>
    <div class="pagination">
        <div class="pagination-wrap align-center clearfix" role="navigation">
            {{#if prev}}
            <a class="pagination-button" href="{{page_url prev}}"> <i class="fa fa-long-arrow-left fa-fw"></i> <span>{{t "Previous page"}}</span></a> -
            {{/if}}
            <span class="page-number">&nbsp;{{t "Page {page} of {pages}" page=page pages=pages}}&nbsp;</span>
            {{#if next}}
            - <a class="pagination-button" href="{{page_url next}}"><span>{{t "Next page"}}</span> <i class="fa fa-long-arrow-right fa-fw"></i></a>
            {{/if}}
        </div>
    </div>

{{else}}

    {{#get "posts" limit=@config.posts_per_page page=page filter="tag:-nofeed" include="tags,authors" as |articles pages|}}
    <div class="post-feed">
        {{#foreach articles limit=@config.posts_per_page }}

            {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            {{> "post-card"}}

        {{/foreach}}
    </div>

    <div class="pagination">
        <div class="pagination-wrap align-center clearfix" role="navigation">
            {{#if pages.prev}}
            <a class="pagination-button" href="{{page_url pages.prev}}"> <i class="fa fa-long-arrow-left fa-fw"></i> <span>{{t "Previous page"}}</span></a> -
            {{/if}}
            <span class="page-number">&nbsp;{{t "Page {page} of {pages}" page=pages.page pages=pages.pages}}&nbsp;</span>
            {{#if pages.next}}
            - <a class="pagination-button" href="{{page_url pages.next}}"><span>{{t "Next page"}}</span> <i class="fa fa-long-arrow-right fa-fw"></i></a>
            {{/if}}
        </div>
    </div>
    {{/get}}

{{/is}}
